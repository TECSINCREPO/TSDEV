version: "3"
services:
  influxdb:
    container_name: oasis-influxdb
    restart: unless-stopped
    image: influxdb:1.8
    ports:
      - '8087:8086'
    volumes:
      - /home/oasis/docker/influxdb:/var/lib/influxdb
    environment:
      - INFLUXDB_DB=oasis
      - INFLUXDB_ADMIN_USER=oasis
      - INFLUXDB_ADMIN_PASSWORD=oasis

  grafana:
    container_name: oasis-grafana
    image: grafana/grafana
    restart: unless-stopped
    user: 1000:1000
    ports:
      - '3000:3000'
    volumes:
      - /home/oasis/docker/grafana:/var/lib/grafana
    depends_on:
      - influxdb
    environment:
      - GF_SECURITY_ADMIN_USER=oasis
      - GF_INSTALL_PLUGINS=grafana-clock-panel,natel-discrete-panel,grafana-piechart-panel

  unifi-poller:
    container_name: oasis-unifipoller
    restart: unless-stopped
    image: golift/unifi-poller:latest
    depends_on:
      - influxdb
      - grafana
    volumes:
      - /home/oasis/docker/unpoller:/config
